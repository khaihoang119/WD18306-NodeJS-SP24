<%- include('../layouts/header.ejs') %>

<div class="container">
    <h1 class="text-center">
        Category Detail

    </h1>
    <h2>Category ID: <%= category.category_id %></h2>
    <form action="/admin/categories/update/<%= category.category_id %>" method="post">
        <div class="form-group">
            <label for="">Name</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="" value="<%= category.name %>">
        </div>
        <div class="form-group">
            <label for="">Status</label>
            <select name="status" id="" class="form-control">
                <option value="1" <% if(category.status==1){ %> selected <% } %> >Display</option>
                <option value="0" <% if(category.status==0){ %> selected <% } %> >Hidden</option>
            </select>
        </div>
        <button type="submit" class="btn btn-info w-100 mt-5">Update</button>
    </form>
</div>




<%- include('../layouts/footer.ejs') %>